# Build Stage
FROM node:{{ node_version }}-alpine as build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

# Set environment variables from manifest if available (NOTE: These are build-time for React usually, but adding matching logic)
{% for key, value in env.items() %}
ENV {{ key }}="{{ value }}"
{% endfor %}

RUN npm run build

# Serve Stage
FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
